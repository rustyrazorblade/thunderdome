use steps::*;

#[export]
query -> GraphQuery
    = "g." scope:query_scope {GraphQuery{blah:1, scope:scope}  }

query_scope -> Scope
    = global_scope / vertex_scope


global_scope -> Scope
    = "V" { Scope::Global }

vertex_scope -> Scope
    = "v(" ids:list_of_ids ")" { Scope::Vertex(ids) }

list_of_ids -> Vec<i64>
    = integer ++ "," { let mut r = Vec::new(); r.push(1); r }

integer -> i64
    = x:[1-9]* { match_str.parse().unwrap() }
